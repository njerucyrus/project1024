<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.apps.project1024.ui.resource_center.TeenagePregnancyActivity">

       <TextView
           android:textSize="18sp"
           android:textAlignment="center"
           android:textStyle="bold"
           android:text="Introduction"
           android:layout_margin="8dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

        <TextView
            android:textSize="16sp"
            android:textAlignment="viewStart"
            android:textStyle="normal"
            android:text="Teenage pregnancy, also known as adolescent pregnancy, is pregnancy in a female under the age of 20. Adolescent pregnancies are a global problem but occur most often in poorer and marginalized communities. Many girls face considerable pressure to marry early and become mothers while they are still a child. 
Teenage pregnancy increases when girls are denied the right to make decisions about their sexual and reproductive health and well-being. Girls must be able to make their own decisions about their bodies and futures and have access to appropriate healthcare services and education.
A teenage pregnancy can change the course of a young mom’s life. It puts her in a place where she’s responsible not only for herself, but also for another human being. Carrying a baby and becoming a mom not only creates physical changes. Women also go through mental changes."
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.riyagayasen.easyaccordion.AccordionView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            app:heading="CAUSES OF TEENAGE PREGNANCY"
            app:isAnimated="false"
            app:isExpanded="true"
            app:isPartitioned="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/teenage_pregnancy_causes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp" />
            </ScrollView>

        </com.riyagayasen.easyaccordion.AccordionView>


        <com.riyagayasen.easyaccordion.AccordionView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            app:heading="Signs of pregnancy"
            app:isAnimated="false"
            app:isExpanded="true"
            app:isPartitioned="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pregnancy_signs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp" />
            </ScrollView>

        </com.riyagayasen.easyaccordion.AccordionView>


        <com.riyagayasen.easyaccordion.AccordionView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            app:heading="Effects of teenage pregnancy on teen mothers"
            app:isAnimated="false"
            app:isExpanded="true"
            app:isPartitioned="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pregnancy_effects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp" />
            </ScrollView>

        </com.riyagayasen.easyaccordion.AccordionView>

        <com.riyagayasen.easyaccordion.AccordionView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            app:heading="Effect of teenage pregnancy on babies"
            app:isAnimated="false"
            app:isExpanded="true"
            app:isPartitioned="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/effects_on_babies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp" />
            </ScrollView>

        </com.riyagayasen.easyaccordion.AccordionView>

        <com.riyagayasen.easyaccordion.AccordionView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            app:heading="Effects of teenage pregnancy on teen fathers."
            app:isAnimated="false"
            app:isExpanded="true"
            app:isPartitioned="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/effects_on_teen_fathers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp" />
            </ScrollView>

        </com.riyagayasen.easyaccordion.AccordionView>


        <com.riyagayasen.easyaccordion.AccordionView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            app:heading="Risk factors for mental health concerns for the child of a teenage mother"
            app:isAnimated="false"
            app:isExpanded="true"
            app:isPartitioned="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/risk_factors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp" />
            </ScrollView>

        </com.riyagayasen.easyaccordion.AccordionView>

        <com.riyagayasen.easyaccordion.AccordionView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            app:heading="Risk factors for mental health concerns for the child of a teenage mother"
            app:isAnimated="false"
            app:isExpanded="true"
            app:isPartitioned="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/impact_to_mother"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp" />
            </ScrollView>

        </com.riyagayasen.easyaccordion.AccordionView>



    </LinearLayout>
</ScrollView>